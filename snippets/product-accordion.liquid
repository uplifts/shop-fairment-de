{%- assign has_accordion = false -%}
{%- for block in section.blocks -%}
  {%- if block.type == 'accordion_item' and block.settings.label != blank and block.settings.content != blank -%}
    {%- assign has_accordion = true -%}
  {%- endif -%}
{%- endfor -%}
{%- if has_accordion -%}
  <div class="product-accordion accordion">
    {%- for block in section.blocks -%}
      {%- if block.type == 'accordion_item' -%}
        {%- if block.settings.label != blank and block.settings.content != blank -%}        
          <div class="accordion-item accordionItem{% if block.settings.is_open %} active{% endif %}"> 
            <div class="accordion-header flex-align-center accordionHeader">
              <div class="flex-1">{{ block.settings.label }}</div>
              <span class="accordion-icon"></span>
            </div>
            <div class="accordion-content acordionContent">
              <div class="accordion-content__inner">
                {{ block.settings.content }}
              </div>
            </div>
          </div>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
  </div>
{%- endif -%}


