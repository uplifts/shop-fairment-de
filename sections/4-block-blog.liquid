{% style %}
  
{% endstyle %}
<div class="page-width">
  <div class="main-link-box">
    {% for block in section.blocks %}
      {% assign item = block.settings %}
      <div class="inner-box">
      <a href="{{ item.page_url }}">
        <div class="text">
          {{ item.title }}
          {{ item.sub-title }}
        </div>
      <span>ARROW</span>
        </a>
      </div>
        
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name": "4 block section",
  "blocks": [
    {
      "name": "link Item",
      "type": "faq",
      "settings": [
        {
          "type": "url",
          "id": "page_url",
          "label": "Page Link"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
          {
          "type": "text",
          "id": "sub-title",
          "label": "Sub title",
          "default": "Sub title"
        }
      ]
    }
  ],
  "presets": [{ "name": "4 block section" }]
}
{% endschema %}